{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Add the "lib" option here
    // "ESNext" includes latest JS features + DOM definitions implicitly in newer TS versions
    // Or be more specific: ["ES2015", "DOM", "DOM.Iterable"]
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}